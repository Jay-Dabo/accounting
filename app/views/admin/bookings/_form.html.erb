<%= bootstrap_form_for([:admin, @booking]) do |f| %>
  
  <%= render 'shared/error_messages', object: @booking %>

  <%= f.text_field    :date_of_booking, required: true, value: Date.today %>
  <%= f.number_field  :year, required: true, value: Date.today.year %>
  
  <%= f.text_field	  :message_text, required: true, value: @body %>
  <%= f.text_field	  :extend_number, required: true, value: @number %>
  <%= f.number_field  :sms_id, required: true, value: @message %>
  <%= f.hidden_field  :firm_id, required: true, value: @firm %>

  <%= f.submit "Simpan", class: "btn btn-primary" %>
<% end %>