<% title("Daftar Aset Tetap") %>
<h3 class="text-center">Daftar Aset Tetap</h3>
<hr></hr> 

<% @asset_groups.each_with_index do |(name, items), index| %>

<div class="container" id="<%= index %>">
  <div class="row user-menu-container square">

    <div class="col-md-7 user-details">

      <div class="row">
        <div class="col-md-6 no-pad coralbg white">
          <div class="user-pad">
            <h2><%= name %></h2>
            <h3 class="white">
              <i class="fa fa-check-circle-o"></i> 
              <%= items.count %> Catatan pembelian
            </h3>            
            <h3 class="white quantity_left">
              <i class="fa fa-folder"></i> 
              <%= unit_remaining(items, 'unit', 'unit_sold', 'decimal') %> <%= items.first.measurement %> tersisa
            </h3><br>
          </div>
        </div>

        <div class="col-md-6 no-pad">
          <div class="col-md-12 no-pad text-center">
              <h3>NILAI PEMBELIAN</h3>
              <h4 class="value"><%= accumulator(items, 'value', 'money') %></h4><br>
              <h3>TOTAL PEMBELIAN</h3>
              <h4 class="quantity">
                <%= accumulator(items, 'unit', 'decimal') %>
                <%= items.first.measurement %>
              </h4>
          </div>          
          <h5></h5>
        </div>
      </div>
      <br>
      <div class="row overview">
        <div class="col-md-6 user-pad text-center">
          <h3>TOTAL PENYUSUTAN</h3>
          <h4 class='total_item_depr'>
            <%= accumulator(items, 'total_depreciation', 'money') %>
          </h4>
        </div>
        <div class="col-md-6 user-pad text-center">
          <h3>NILAI SAAT INI</h3>
          <h4>
            <%= unit_remaining(items, 'value', 'total_depreciation', 'money') %>
          </h4>
        </div>
      </div>
    </div>

    <div class="col-md-1 user-menu-btns">
        <div class="btn-group-vertical square" id="responsive">
            <a href="#tab_<%= index %>_1" class="btn btn-block btn-default active action" data-toggle="tab">
              <i class="fa fa-bell-o fa-3x"></i>
            </a>
            <a href="#tab_<%= index %>_2"  class="btn btn-default" data-toggle="tab">NILAI
            </a>
            <a href="#tab_<%= index %>_3"  class="btn btn-default" data-toggle="tab">OPSI
            </a>            
        </div>
    </div>

    <div class="col-md-4 user-menu user-pad">

      <div class="user-menu-content active" id="tab_<%= index %>_1">
        <h3>Riwayat Pembelian</h3>
        <ul class="user-menu-list">

          <% items.each do |item| %>
          <li class="row">
            <div class="col-sm-12" style="padding-left: 5px;">
              <small><i class="fa fa-clock-o"></i> 
                <%= item.date_purchased %> | beli <%= (item.unit) %> <%= (item.measurement) %> | <%= has_payable?(item) %>
              </small>
            </div>
            <div class="col-sm-12">
              <p class="coral">dengan total <%= idr_money(item.value) %> 
                (<%= show_value_per_unit(item) %>)
              </p>
            </div>
            <div class="col-sm-12">
              <%= link_to "Koreksi", edit_firm_spending_path(@firm, item.spending, type: 'Asset') %>
            </div>
          </li>
          <% end %>

        </ul>
      </div>

        <div class="user-menu-content" id="tab_<%= index %>_2">
          <h3>Nilai Aset</h3>
          <ul class="user-menu-list">

            <% items.each do |item| %>
            <li class="row">
              <div class="col-sm-12">
                <small><i class="fa fa-clock-o"></i> 
                  <%= item.date_purchased %> | beli <%= (item.unit) %> <%= item.measurement %>, sisa <%= (item.unit_remaining) %>
                <span class="status"><%= item.status %></span>                  
                </small>
              </div>
              <div class="col-sm-12">
                <small class="coral acc_depr">
                  <%= idr_money(item.accumulated_depreciation) %>
                </small>
              </div>
              <div class="col-sm-12">
                <span class="life">Nilai habis <%= item.year_remaining %> tahun lagi</span>                
              </div>
            </li>
            <% end %>

          </ul>
        </div>

        <div class="user-menu-content" id="tab_<%= index %>_3">
          <h3>Opsi Tindakan</h3>
          <ul class="user-menu-list">
            <li>
              <%= link_to new_firm_spending_path(@firm, type: 'Asset', sub: items.first.asset_type, name: name, measure: items.first.measurement), class: "btn btn-labeled btn-lg btn-warning" do %>
                <span class="btn-label"><i class="fa fa-shopping-cart"></i></span>Catat Penambahan
              <% end %>  
            </li>
          </ul>
        </div>        
    </div>


  </div>
</div>

  <% if Rails.env.test? %>

  <% end %>

<% end %>
  <%= link_to "Kembali Ke Home", user_root_path %>  

