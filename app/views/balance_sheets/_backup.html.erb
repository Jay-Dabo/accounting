                <th>Aset Milik Usaha</th>
                <th id="fixed"><%= @balance_sheet.fixed_assets %></th>
                <th>Laba Yang Disimpan</th>
                <th id="retained"><%= @balance_sheet.retained %></th>
            </tr>
            <tr>
                <th>Aset Tetap Lainnya</th>
                <th id="other_fixed"><%= @balance_sheet.other_fixed_assets %></th>
