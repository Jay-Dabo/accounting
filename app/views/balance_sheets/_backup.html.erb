            </tr>
            <tr>
                <th>Akumulasi Penyusutan</th>
                <th id='accu_depr'>(<%= @balance_sheet.accu_depr %>)</th>
                <th>Dana Yang Ditarik Pemilik</th>
                <th id="drawing">(<%= @balance_sheet.drawing %>)</th>
            </tr>
            <tr>
                <th class="bottom-line">Total Aset</th>
                <th class="bottom-line" id="total_asset"><%= (@balance_sheet.aktiva) %></th>
                <th class="bottom-line">Total Liabilitas dan Ekuitas</th>
                <th class="bottom-line" id="total_liab_equity"><%= (@balance_sheet.passiva) %></th>
            </tr>                        
          </tbody>
        </table>

<%= link_to 'Back', user_root_path %>

<% unless Rails.env.production? %>
    <div class="debug-balance">
        <%= DateTime.now.to_date %>    
        <%= @balance_sheet.closed %>
        <%= balanced?(@balance_sheet) %>
        <%= difference?(@balance_sheet) %>
    </div>
<% end %>

