<li class="ticket-item">

  <div class="row" id='accordion-2'>
    <div class="ticket-user col-md-6 col-sm-12">
      <span class="user-name">Arus Kas dari Aktivitas Investasi</span>
      <span class="user-at">at</span>
      <span class="user-company">Microsoft</span>
    </div>
    <div class="ticket-time col-md-4 col-sm-6 col-xs-12">
      <div class="divider hidden-md hidden-sm hidden-xs"></div>
      <span>Rp</span>
      <span class="time" id="net_operating"><%= @cash_flow.net_cash_investing %></span>
    </div>
    <div class="ticket-type  col-md-2 col-sm-6 col-xs-12">
      <span class="divider hidden-xs"></span>
      <span class="type">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-2" href="#collapse-2">
          Detil
        </a>
      </span>
    </div>
    <div class="ticket-state bg-palegreen">
      <i class="fa fa-check"></i>
    </div>

    <div id="collapse-2" class="panel-collapse collapse">
      <div class="row">
        <div class="col-xs-2">
          <div class="servive-block servive-block-aqua">
            <h5 class="heading-md">Laba(Rugi) Usaha</h5>
            <th id="net_income"><%= @cash_flow.total_income %></th>
          </div>
        </div>
        <div class="col-xs-2">
          <div class="servive-block servive-block-grey">
            <h5 class="heading-md">Depresiasi Aset Tetap</h5>
            <th id="depreciation"><%= @cash_flow.depreciation_adjustment %></th>
          </div>
        </div>
        <div class="col-xs-2">
          <div class="servive-block servive-block-aqua">
            <h5 class="heading-md">Laba(Rugi) Penjualan Aset Tetap</h5>
            <th id="gain_adjustment"><%= @cash_flow.total_gain_loss_from_asset %></th>
          </div>
        </div>
        <div class="col-xs-2">
          <div class="servive-block servive-block-dark-blue">
            <h5 class="heading-md">Arus Kas Dari Piutang Usaha</h5>
            <th id="receivable"><%= @cash_flow.receivable_flow %></th>
          </div>
        </div>
        <div class="col-xs-2">
          <div class="servive-block servive-block-purple">
            <h5 class="heading-md">Arus Kas Dari Stok Dagang</h5>
            <th id="payable"><%= @cash_flow.payable_flow %></th>
          </div>
        </div>        

      </div>      
    </div>



  </div>

</li>