<p id="notice"><%= notice %></p>

<h1 class="text-center">Arus Kas Tahun <%= @cash_flow.year %></h1>
<table class="table" id="match-stats">
	<thead>
    <tr>
        <th class="sheet-heading"></th>
        <th class="sheet-heading"></th>
        <th class="sheet-heading"></th>
        <th class="sheet-heading"></th>
    </tr>
	</thead>
	<tbody>
    <tr>
        <th class="sheet-heading"></th>
        <th></th>
        <th class="sheet-heading"></th>
    </tr>
    <tr>
        <th>Arus Kas dari Operasi Usaha:</th>
        <th></th>
        <th></th>
    </tr>
    <tr>
    	<th>Laba(Rugi) Usaha</th>
    	<th></th>
    	<th id="net_income"><%= @cash_flow.total_income %></th>
    </tr>
    <tr>
        <th>Depresiasi Aset Tetap</th>
        <th id="depreciation"><%= @cash_flow.depreciation_adjustment %></th>
        <th></th>
    </tr>
    <tr>
        <th>Laba(Rugi) Penjualan Aset Tetap</th>
        <th id="gain_adjustment"><%= @cash_flow.total_gain_loss_from_asset %></th>
        <th></th>
    </tr>
    <tr>
        <th>Arus Kas Dari Piutang Usaha</th>
        <th id="receivable"><%= @cash_flow.receivable_flow %></th>
        <th></th>
    </tr>
    <tr>
        <th>Arus Kas Dari Stok</th>
        <th id="inventory"><%= @cash_flow.inventory_flow %></th>
        <th></th>
    </tr>
    <tr>
        <th>Arus Kas Dari Hutang Usaha</th>
        <th id="payable"><%= @cash_flow.payable_flow %></th>
        <th></th>    	
    </tr>
    <tr>
        <th>Arus Kas Bersih dari Operasi Usaha</th>
        <th></th>
        <th id="net_operating"><%= @cash_flow.net_cash_operating %></th>
    </tr>
    <tr>
        <th class="stop-gap">placeholder</th>
        <th class="stop-gap"></th>
        <th class="stop-gap"></th>
    </tr>
    <tr>
        <th>Arus Kas dari Aktivitas Investasi:</th>
        <th></th>
        <th></th>
    </tr>
    <tr>
    	<th>Penjualan Aset Tetap</th>
    	<th id="sale_fixed"><%= @cash_flow.asset_sale %></th>
    	<th></th>
    </tr>
    <tr>
        <th>Pembelian Aset Tetap</th>
        <th id="purchase_fixed"><%= @cash_flow.asset_purchase %></th>
        <th></th>
    </tr>    
    <tr>
        <th>Arus Kas Bersih dari Aktivitas Investasi</th>
        <th></th>
        <th id="net_investing"><%= @cash_flow.net_cash_investing %></th>
    </tr>
    <tr>
        <th class="stop-gap">placeholder</th>
        <th class="stop-gap"></th>
        <th class="stop-gap"></th>
    </tr>    
    <tr>
        <th>Arus Kas dari Aktivitas Pendanaan:</th>
        <th></th>
        <th></th>
    </tr>
    <tr>
    	<th>Arus Kas dari Modal Pemilik</th>
    	<th id="capital"><%= @cash_flow.capital_injection - @cash_flow.capital_withdrawal %></th>
    	<th></th>
    </tr>
    <tr>
        <th>Arus Kas dari Dana Pinjaman</th>
        <th id="loan"><%= @cash_flow.loan_injection - @cash_flow.loan_payment %></th>
        <th></th>
    </tr>
    <tr>
        <th>Arus Kas Bersih dari Aktivitas Pendanaan</th>
        <th></th>
        <th id="net_financing"><%= @cash_flow.net_cash_financing %></th>
    </tr>
    <tr>
        <th>Total Perubahan Kas</th>
        <th></th>
        <th id="net_change"><%= @cash_flow.net_change %></th>
    </tr>
    <tr>
        <th>Saldo Awal Kas</th>
        <th></th>
        <th id="beginning"><%= @cash_flow.beginning_cash %></th>
    </tr>
    <tr>
        <th>Saldo Akhir Kas</th>
        <th></th>
        <th class="bottom-line" id="ending"><%= @cash_flow.ending_cash %></th>
    </tr>    
  </tbody>
</table>

