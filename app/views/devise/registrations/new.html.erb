<% title("Sign Up") %>

<div class="row">
  <div class="col-sm-6 col-md-12">
    <h1>Daftar</h1>

    <%= bootstrap_form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6 col-md-6">
          <%= f.email_field :email, class: "form-control", help: "Gunakan alamat email yang aktif dan valid" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6 col-md-6">
          <%= f.password_field :password, class: "form-control", label: 'Password', help: "Panjang minimal untuk password adalah 8 karakter" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6 col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control", label: 'Konfirmasi Password' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 col-md-6">
        <%= f.submit "Buat Akun", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>

  </div>
</div>
