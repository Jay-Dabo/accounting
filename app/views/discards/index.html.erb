<div class="container">
  <br>
  <div class="panel report panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title">
        Daftar Penggunaan dan Pelepasan Aset
      </h3>
    </div>   
    <ul class="list-group">

      <% @discards.each do |discard| %>
      <li class="list-group-item", style="padding-left: 5px">
        <div class="row toggle" id="dropdown-detail-<%= discard.id %>" data-toggle="detail-<%= discard.id %>">
          <div class="lists col-sm-3 col-xs-12">
            <span class="info_date">
              <i class="fa fa-check-circle-o"></i> <%= discard.date_of_write_off %>
              <i class="fa fa-folder"></i> <%= discard.discardable_type %>
            </span>
          </div>

          <div class="lists col-sm-3 col-xs-6 text-center">
            <span class="divider"></span>
            <span><%= discarded_item(discard) %></span>
          </div>
          <div class="lists col-sm-2 col-xs-6 text-center">
            <span class="divider"></span>
            <span>
              <%= discard.quantity %> <%= discard.discardable.measurement %>
            </span>
          </div>

          <div class="lists col-sm-3 col-xs-6 text-center">
            <span class="divider"></span>
            <span class="info_spent">
              <%= idr_money(discard.item_value) %> 
              <% if discard.cost_incurred != 0 %>
                + <%= idr_money(discard.cost_incurred) %> 
              <% end %>
            </span>
          </div>
          <div class="lists col-sm-2 col-xs-6 text-center">
            <span class="divider"></span>
            <span class="badge">Detil <i class="fa fa-chevron-down"></i></span>
          </div>
        </div>

        <div id="detail-<%= discard.id %>">
          <hr></hr>
          <div class="container">
              <div class="fluid-row">
                  <div class="col-sm-3 col-xs-12">
                    <%= discard.info %>
                  </div>
                  <div class="col-sm-3 col-xs-12">

                  </div>
                  <div class="col-sm-3 col-xs-12 text-center">
                  </div>                  
                  <div class="col-sm-3 col-xs-12 text-center">
                    <span class="divider"></span>
                    <%= edit_discard(discard) %>
                  </div>
              </div>
          </div>
        </div>
      </li>
      <% end %>

     </ul>
  </div>
</div>
<%= link_to "Kembali Ke Home", user_root_path %>  