<% if !user_signed_in? %>
	<li>
		<%= link_to "Masuk", new_user_session_path unless params[:action] == "new" && params[:controller] == "devise/sessions" %>
	</li>
	<li>
		<%= link_to "Daftar", new_user_registration_path unless params[:action] == "new" && params[:controller] == "devise/registrations" %>
	</li>
<% else %>
	<li><%= link_to "Edit Akun Anda", edit_user_registration_path %></li>

	<% if current_user.admin? %>
	<li><%= link_to "Admin", admin_root_path %></li>
	<% end %>

	<li><%= link_to "Keluar", destroy_user_session_path, data:{method: :delete} %></li>
<% end %>
