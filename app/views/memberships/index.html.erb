<% title("Laman Tim") %>

<div class="container">
	<h3 class="text-center">Daftar Pengguna Yang Terlibat</h3>

	Tambah Anggota Tim
		<%= link_to "+ Pengguna Yang Terdaftar", new_firm_membership_path(@firm), class: "btn btn-md btn-primary" %> 

		<%= link_to "+ Anggota Yang Belum Mendaftar", new_firm_membership_path(@firm, register: true), class: "btn btn-md btn-info" %> 

 	<hr>
	<div class="row">
	  <div class="col-lg-12">
		<div class="main-box no-header clearfix">
		  <div class="main-box-body clearfix">
			<div class="table-responsive">
			  <table class="table user-list">
				<thead>
				  <tr>
					<th class="text-center"><span>User</span></th>
					<th class="text-center"><span>Bergabung</span></th>
					<th class="text-center"><span>Status</span></th>
					<th class="text-center"><span>Mendaftar</span></th>
					<th></th>
					<th></th>
				  </tr>
				</thead>
				<tbody>

				<% @memberships.each_with_index do |member, index| %>
				<tr>
				  <td>
					<h5 class="turq"><%= member.user.full_name %></h5>
					<span class="user-subhead">#<%= index + 1 %>. <%= member.role %></span>
				  </td>
				  <td class="text-center"><%= member.created_at %></td>
				  <td class="text-center"><%= member.status %></td>
				  <td class="text-center"><%= member.user.created_at %></td>
				  <td style="width: 25%;">
				  <% if find_membership(member.firm).role == 'Pemilik' && member.role != 'Pemilik' %>
					
					  <%= link_to edit_firm_membership_path(member.firm, member), class: "table-link" do %>
						<span class="fa-stack">
						  <i class="fa fa-square fa-stack-2x"></i>
						  <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
						</span>Koreksi Anggota Tim #<%= index + 1 %>
				  	  <% end %>
				  </td>
				  <td style="width: 25%;">
						<%= link_to firm_membership_path(member.firm, member), confirm: 'Kamu yakin?', method: :delete, class: "table-link danger" do %>
							<span class="fa-stack">
								<i class="fa fa-square fa-stack-2x"></i>
								<i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
							</span>Hapus Hak Anggota Tim #<%= index + 1  %>
						<% end %>
					</td>
				  <% end %>
				</tr>
				<% end %>

              	</tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>								