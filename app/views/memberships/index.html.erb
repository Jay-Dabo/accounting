<div class="container">
	<h3 class="text-center">Daftar Pengguna Yang Terlibat</h3>

	Tambah Anggota Tim
		<%= link_to "+ Pengguna Yang Terdaftar", new_firm_membership_path(@firm), class: "btn btn-md btn-primary" %> 

		<%= link_to "+ Anggota Yang Belum Mendaftar", new_firm_membership_path(@firm, register: true), class: "btn btn-md btn-info" %> 

 	<hr>
	<div class="row">
		<div class="col-lg-12">
			<div class="main-box no-header clearfix">
				<div class="main-box-body clearfix">
					<div class="table-responsive">
						<table class="table user-list">
							<thead>
								<tr>
								<th><span>User</span></th>
								<th><span>Bergabung</span></th>
								<th class="text-center"><span>Status</span></th>
								<th><span>Mendaftar</span></th>
								<th>
								</th>
								</tr>
							</thead>
							<tbody>

								<% @memberships.each_with_index do |member, index| %>
								<tr>
									<td>
										<h5 class="turq"><%= member.user.full_name %></h5>
										<span class="user-subhead"><%= member.role %></span>
									</td>
									<td><%= member.created_at %></td>
									<td><%= member.status %></td>
									<td><%= member.user.created_at %></td>
									<% if find_membership(member.firm).role == 'Pemilik' %>
									<td style="width: 20%;">
										<%= link_to edit_firm_membership_path(member.firm, member), class: "table-link" do %>
											<span class="fa-stack">
												<i class="fa fa-square fa-stack-2x"></i>
												<i class="fa fa-pencil fa-stack-1x fa-inverse"></i>Koreksi Anggota Tim #<%= index + 1 %>
											</span>
										<% end %>
										<%= link_to firm_membership_path(member.firm, member), confirm: 'Kamu yakin?', method: :delete, class: "table-link danger" do %>
											<span class="fa-stack">
												<i class="fa fa-square fa-stack-2x"></i>
												<i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>Hapus Hak Anggota Tim #<%= index + 1  %>
											</span>
										<% end %>
									</td>
									<% end %>
								</tr>
								<% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>								