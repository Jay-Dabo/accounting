    <thead>
      <h3 class="text-center">Daftar Pendapatan Lain</h3> 
      <tr>
        <th>Tanggal</th>
        <th>Sumber</th>
        <th>Nilai Pendapatan</th>
        <th>Dicicil?</th>
        <th>Detail</th>
        <th></th>
      </tr>
    </thead>
