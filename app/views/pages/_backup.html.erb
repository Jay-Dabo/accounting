<% unless current_user.firms.count == 0 %>
	<% @firms.each do |firm| %>
		<div class="panel panel-default">
		  <div class="panel-heading"><%= firm.name %></div>
		  <div class="panel-body">
		  	<div class="row">
		  		<%= render partial: 'reports', locals: { firm: firm } %>
					<%= render partial: 'spendings', locals: { firm: firm } %>
					<%= render partial: 'revenues', locals: { firm: firm } %>
					<%= render partial: 'funds', locals: { firm: firm } %>
		  	</div>
		  </div>
		</div>

	<% end %>
<% end %>
<div class="container">
	<div class="row">
	<% unless current_user.firms.count == 0 %>	
		
		<% @firms.each do |firm| %>
		
   	  <div class="well profile">
        <div class="col-sm-12">
          <div class="col-xs-12 col-sm-12">
            <h1 class="text-center"><%= firm.name %></h1>
            <p class="text-center">
	            <strong>Jenis Usaha (Industri): 
            		<%= firm.type %> (<%= firm.industry %>)
            	</strong>
            </p>
            <div class="col-xs-12 col-sm-12 col-md-6">
	            <p><strong>Catatan Transaksi:</strong>
	              <span class="tags">
	              	<%= link_to "Modal", firm_funds_path(firm) %>
	              </span>
	              <span class="tags">
	              	<%= link_to "Pembayaran", firm_spendings_path(firm) %>
	              </span>
	              <span class="tags">
	              	<%= link_to "Pendapatan", firm_revenues_path(firm) %>
	              </span>
	            </p>
	            <p><strong>Daftar Lengkap:</strong>
									<span class="tags">
										<%= link_to "Persediaan Produk", firm_merchandises_path(firm) %>
									</span>
									<span class="tags">													
										<%= link_to "Aset", firm_assets_path(firm) %>
									</span>
									<span class="tags">													
										<%= link_to "Pengeluaran", firm_expenses_path(firm) %>
									</span>                    
	            </p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6">
            	<p><strong>Laporan: </strong> </p>
            </div>
          </div>             
        </div>            
	        <div class="col-xs-12 divider text-center">
            <div class="col-xs-12 col-sm-4 emphasis">
              <h3><strong>Dana Usaha</strong></h3>                    
              <p><small>Followers</small></p>
							<%= link_to "Tambah Dana", new_firm_fund_path(firm, type: "Injection"), class: "btn btn-success btn-block" %>
							<%= link_to "Tarik Dana", new_firm_fund_path(firm, type: "Withdrawal"), class: "btn btn-success btn-block" %>
            </div>
            <div class="col-xs-12 col-sm-4 emphasis">
              <h3><strong>Pembayaran</strong></h3>                    
              <p><small>Following</small></p>
							<%= link_to "Tambah Stok Barang", new_firm_spending_path(firm, type: "Merch"), class: "btn btn-info btn-block" %>
							<%= link_to "Catat Pembelian", new_firm_spending_path(firm, type: "Asset"), class: "btn btn-info btn-block" %>
							<%= link_to "Catat Pengeluaran", new_firm_spending_path(firm, type: "Expense"), class: "btn btn-info btn-block" %>
            </div>
            <div class="col-xs-12 col-sm-4 emphasis">
              <h3><strong>Pendapatan</strong></h3>                    
              <p><small>Snippets</small></p>
							<%= link_to "Catat Penjualan", new_firm_revenue_path(firm, type: 'Operating'), class: "btn btn-primary btn-block" %>
							<%= link_to "Catat Pendapatan Lain", new_firm_revenue_path(firm, type: 'Other'), class: "btn btn-primary btn-block" %>
            </div>
          </div>
    	  </div>                 
			
			<% end %>
		<% end %>
	</div>
</div>