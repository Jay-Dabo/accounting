<!-- COLUMN ONE -->
<div class="col-sm-12 col-md-4">
   <!--
      ****** LINE CHART WIDGET *******
      -->    
  <div id="line-chart-widget" class="panel">
    <div class="panel-heading">
      <h4 class="text-uppercase">
        <strong><%= firm.name %></strong>
        <span class="label pull-right">
          <%= DateTime.now %>
        </span><br>
        <small><%= firm.type %>: <%= firm.industry %></small>
      </h4>
    </div>
    <div class="panel-body">
      <!-- Canvas Here -->

        <div class="col-md-8 col-sm-8">
          <div class="servive-block servive-block-green">
            <i class="fa fa-user fa-3x"></i>
            <h5 class="heading-md">Modal Pemilik</h5>
            <h5><%= number_to_currency(firm.current_balance_sheet.capital, unit: "Rp", delimiter: ".", precision: 0) %></h5>
          </div>
        </div>
        <div class="col-md-4 col-sm-4">
          <%= link_to "Tambah", new_firm_fund_path(firm, type: "Injection"), class: "btn btn-block btn-success", id: "add-fund", :title => 'Catat Penambahan Modal Dari Pemilik', :rel => 'tooltip', "data-placement" => "top"  %>
          <%= link_to "Tarik", new_firm_fund_path(firm, type: "Withdrawal"), class: "btn btn-block btn-warning", id: "withdraw-fund", :title => 'Catat Penarikan Kas dari usaha oleh Pemilik', :rel => 'tooltip', "data-placement" => "top" %>
        </div>        


        <div class="col-md-8 col-sm-8">
          <div class="servive-block servive-block-green">
            <i class="fa fa-bank fa-3x"></i>
            <h5 class="heading-md">Modal Pinjaman</h5>
            <h5><%= number_to_currency(firm.current_balance_sheet.debts, unit: "Rp", delimiter: ".", precision: 0) %></h5>
          </div>
        </div>
        <div class="col-md-4 col-sm-4">
          <%= link_to "Tambah", new_firm_loan_path(firm, type: "Injection"), class: "btn btn-block btn-success", id: "add-loan", :title => 'Mark complete', :rel => 'tooltip', "data-placement" => "top"  %>
          <%= link_to "Bayar", new_firm_payable_payment_path(firm, type: "Loan"), class: "btn btn-block btn-warning", id: "withdraw-loan", :title => 'Mark complete', :rel => 'tooltip', "data-placement" => "top" %>        
        </div>        


      
        <div class="col-md-8 col-sm-8">
          <div class="servive-block servive-block-blue">
            <i class="fa fa-building-o fa-3x"></i>
            <h5 class="heading-md">Total Aset</h5>
            <h5><%= number_to_currency(firm.current_balance_sheet.aktiva, unit: "Rp", delimiter: ".", precision: 0) %></h5>
          </div>
        </div>
        <div class="col-md-4 col-sm-4">
          <%= button_to 'Depresiasi', refresh_firm_assets_path(firm), method: :post, class: "btn btn-block btn-info" %>
        </div>        
      


        <div class="col-md-6 col-sm-6">
          <div class="servive-block servive-block-green">
            <i class="fa fa-money fa-3x"></i>
            <h5>Kas dan Setara Kas</h5>
            <h5><%= number_to_currency(firm.current_balance_sheet.cash, unit: "Rp", delimiter: ".", precision: 0) %></h5>
          </div>
        </div>
        <div class="col-md-6 col-sm-6">
          <div class="servive-block servive-block-blue">
            <i class="fa fa-building-o fa-3x"></i>
            <h5 class="heading-md">Total Aset</h5>
            <h5><%= number_to_currency(firm.current_balance_sheet.aktiva, unit: "Rp", delimiter: ".", precision: 0) %></h5>
          </div>
        </div>


    </div>
    <div class="panel-footer">
    </div>
  </div>


</div>
