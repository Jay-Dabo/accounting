<div class="col-sm-6 col-md-4">
     <!--
        ****** CHART WIDGET *******
        -->    
  <div id="pie-chart-widget" class="panel">
    <div class="panel-heading text-center">
       <h4 class="text-uppercase"><strong>Pendapatan</strong></h4>
    </div>
    <div class="panel-body">
       
    </div>
    <div class="panel-footer">
      <div class="list-block">
        <ul class="text-center legend">
          <li class="video" style="margin-right: 1px;">
            Pendapatan Operasi
            <h5>20.000.000</h5>
          </li>
          <li class="photo">
            Pendapatan Lain
            <h5>5.000.000</h5>
          </li>
          <li class="audio" style="margin-left: 1px;">
            Nilai Piutang 
            <h5>2.000.000</h5>
          </li>
        </ul>
      </div>
      <div class="btn-group btn-group-justified text-center">
        <%= link_to "Catat Penjualan", new_firm_fund_path(firm, type: "Injection"), class: "btn btn-default" %>
      </div>

      <div class="btn-group btn-group-justified text-center">
        <%= link_to 'Catat Pendapatan Lain', new_firm_revenue_path(firm, type: 'Other'), class: "btn btn-default" %>
      </div>

      <div class="btn-group btn-group-justified text-center">
         <%= link_to 'Catat Pendapatan Piutang',new_firm_receivable_payment_path(firm), class: "btn btn-default" %>
      </div>          
    </div>
  </div>

</div>
