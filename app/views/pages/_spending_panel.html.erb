    <div class="col-sm-6 col-md-4">
      <div id="pie-chart-widget" class="panel">
        <div class="panel-heading text-center">
           <h4 class="text-uppercase"><strong>Pembayaran</strong></h4>
        </div>
        <div class="panel-body">
          <div class="row col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3">
            <button type="button" class="btn btn-sm btn-info" data-toggle="popover" data-placement="bottom" title="Pembayaran" data-content="Aktifitas pembayaran dapat dikelompokkan menjadi empat, pembayaran untuk pembelian stok dagang, pembayaran untuk peralatan dan perlengkapan usaha, pembayaran untuk biaya operasi dan non-operasi usaha (seperti listrik, pemasaran, dll.), serta pembayaran hutang.">Klik Untuk Lihat Penjelasan</button>       
          </div>           
        </div>
        <div class="panel-footer" id="spending">
          <div class="list-block">
            <ul class="text-center legend">
              <li class="photo">
                Total Pembayaran
                <h5><%= idr_money(firm.current_expenditure) %></h5>
              </li>
              <li class="audio">
                Nilai Hutang Usaha
                <h5><%= idr_money(firm.current_balance_sheet.payables) %></h5>
              </li>
            </ul>
          </div>

          <% if firm.type == 'Jual-Beli'  %>
            <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_merch_tip %>">
              <%= link_to 'Tambah Stok Produk', new_firm_spending_path(firm, type: "Merchandise"), class: "btn btn-default"  %>
            </div>
          <% elsif firm.type == 'Manufaktur'  %>
            <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_material_tip %>">
              <%= link_to 'Catat Pembelian Bahan Baku', new_firm_spending_path(firm, type: "Material"), class: "btn btn-default"  %>
            </div>          
          <% end %>

          <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_expendable_tip %>">
            <%= link_to 'Catat Pembelian Aset Lancar', new_firm_spending_path(firm, type: "Expendable"), class: "btn btn-default"  %>
          </div>

          <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_fixed_tip %>">
            <%= link_to 'Catat Pembelian Aset Tetap', new_firm_spending_path(firm, type: "Asset"), class: "btn btn-default"  %>
          </div>

          <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_expense_tip %>">
            <%= link_to 'Catat Pengeluaran', new_firm_spending_path(firm, type: "Expense"), class: "btn btn-default"  %>
          </div>

          <div class="btn-group btn-group-justified text-center" data-toggle="tooltip" title="<%= spend_payable_tip %>">
            <%= link_to 'Catat Pembayaran Hutang Usaha', new_firm_payable_payment_path(firm, type: "Spending"), class: "btn btn-default" %>
          </div>

        </div>
      </div>
    </div>
