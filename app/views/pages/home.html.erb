<% title("Home") %>

<div class="container">
  <h1>
	 <i class="fa fa-home"></i> Home Page 
  </h1>

  <% if @firms.count == 0 || @firm.fiscal_years.empty? %>

    <%= render 'starting_page' %>

  <% else %>

    <%= link_to "Tutup Buku", closing_fiscal_years_path(fiscal_year_id: @firm.fiscal_years.current.first), method: :post  %><br>
    
    <% if @firm.type == 'Jasa' %>
      <%= link_to "Catat Jasa", new_firm_service_path(@firm) %><br>
    <% end %>

    <% if @firm.type == 'Manufaktur' %>
      <%= link_to "Catat Jenis Produk", new_firm_product_path(@firm) %><br>
      <% unless @firm.materials.count == 0 %>
        <%= link_to "Catat Penambahan Produk", new_firm_assembly_path(@firm) %><br>
      <% end %>
    <% end %>

    <div class="row">
      <div class="board">
        <%= render 'nav_tabs' %>
      </div>

      <div class="tab-content">
        <div class="tab-pane active" id="action_dash">  
          <div class="row">
            <%= render partial: 'fund_panel', locals: { firm: @firm } %>
            <%= render partial: 'revenue_panel', locals: { firm: @firm } %>
            <%= render partial: 'spending_panel', locals: { firm: @firm } %>
          </div>
        </div>
        
        <div class="tab-pane" id="report_dash">
          <div class="row">
            <%= render partial: 'report_panel', locals: { firm: @firm } %>
          </div>
        </div>

        <div class="tab-pane" id="setting_dash">
          <%= render partial: 'settings_panel', locals: { firm: @firm, user: current_user } %>        
        </div>        
      </div>
           
    </div>

  <% end %>

  </div>
</div>
