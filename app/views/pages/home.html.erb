<% title("Home") %>
<div class="container">
  <h1>
	 <i class="fa fa-home"></i> Home Page 
  </h1>

  <% if current_user.firms.count == 0 %>  
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div class="box">
        <div class="box-icon">
            <span class="fa fa-4x fa-info"></span>
        </div>
        <div class="info">
            <h4 class="text-center">Selamat Datang! </h4>
            <p>Sebelum menggunakan aplikasi ini, kamu harus 
            memasukkan data mengenai usaha kamu dengan mengklik 
            tombol di bawah ini</p>
            <%= link_to "Buat Akun Usaha", new_firm_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

  <% else %>
  <% @firms.each do |firm| %> 
  <div class="row">
    <div class="col-sm-12">

      <div id="nav-widget" class="btn-group btn-group-justified">
        <div class="btn-group">
           <button type="button" class="btn text-uppercase"><i class="fa fa-map-marker fa-2x"></i>Check In</button>
        </div>
        <div class="btn-group">
           <button type="button" class="btn text-uppercase"><i class="fa fa-bell fa-2x"></i>  Events</button>
        </div>
        <div class="btn-group">
           <button type="button" class="btn text-uppercase"><i class="fa fa-user fa-2x"></i>  Account</button>
        </div>
        <div class="btn-group">
           <button type="button" class="btn text-uppercase"><i class="fa fa-cog fa-2x"></i>  Settings</button>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <!-- COLUMN ONE -->
    <div class="col-sm-12 col-md-4">
       <!--
          ****** LINE CHART WIDGET *******
          -->    
      <div id="line-chart-widget" class="panel">
        <div class="panel-heading">
          <h4 class="text-uppercase">
            <strong><%= firm.name %></strong>
            <span class="label pull-right">
              107.26 <i class="fa fa-plus"></i>0.23(0.10%)
            </span><br>
            <small><%= firm.type %>: <%= firm.industry %></small>
          </h4>
        </div>
        <div class="panel-body">
          <!-- Canvas Here -->
        </div>
        <div class="panel-footer">
          <div class="list-block">
            <ul class="text-center legend">
              <li>
                <h3><%=  %></h3>
                Nilai Kas
              </li>
              <li>
                <h3><%=  %></h3>
                Aset Total
              </li>              
            </ul>
          </div>
          <div class="list-block">
            <ul class="text-center legend">
              <li>
                <h3><%=  %></h3>
                Modal
              </li>
              <li>
                <h3><%=  %></h3>
                Pinjaman/Hutang
              </li>              
            </ul>
          </div>          
          <div class="chart-block clearfix">
            <div class="pull-left">
              Monthly Volume
              <canvas id="myBarChart"></canvas>
            </div>
            <div class="pull-right">
              Yearly Change<br>
              <div class="change text-center">
                <i class="fa fa-plus"></i> 86.01
              </div>
            </div>            
          </div>

        </div>
      </div>
    </div>

    <div class="col-sm-6 col-md-4">
         <!--
            ****** CHART WIDGET *******
            -->    
      <div id="pie-chart-widget" class="panel">
        <div class="panel-heading text-center">
           <h4 class="text-uppercase"><strong>Pendapatan</strong></h4>
        </div>
        <div class="panel-body">
           
        </div>
        <div class="panel-footer">
          <div class="list-block">
            <ul class="text-center legend">
              <li class="video" style="margin-right: 1px;">
                video 
                <h2>62%</h2>
              </li>
              <li class="photo">
                photo 
                <h2>21%</h2>
              </li>
              <li class="audio" style="margin-left: 1px;">
                audio 
                <h2>10%</h2>
              </li>
            </ul>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">
            <%= link_to "Catat Penjualan", new_firm_fund_path(firm, type: "Injection"), class: "btn btn-default" %>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">
            <%= link_to new_firm_revenue_path(firm, type: 'Other'), class: "btn btn-default" do %>
              <small>Catat Pendapatan Lain</small>
            <% end %>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">            
             <%= link_to new_firm_receivable_payment_path(firm), class: "btn btn-default" do %>
              <small>Catat Pendapatan Piutang</small>
            <% end %>
          </div>          
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-md-4">
      <div id="pie-chart-widget" class="panel">
        <div class="panel-heading text-center">
           <h4 class="text-uppercase"><strong>Pembayaran</strong></h4>
        </div>
        <div class="panel-body">
           
        </div>
        <div class="panel-footer">
          <div class="list-block">
            <ul class="text-center legend">
              <li class="video" style="margin-right: 1px;">
                video 
                <h2>62%</h2>
              </li>
              <li class="photo">
                photo 
                <h2>21%</h2>
              </li>
              <li class="audio" style="margin-left: 1px;">
                audio 
                <h2>10%</h2>
              </li>
            </ul>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">
            <%= link_to new_firm_spending_path(firm, type: "Merch"), class: "btn btn-default" do %>
              <small>Tambah Stok Produk</small>
            <% end %>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">            
            <%= link_to new_firm_spending_path(firm, type: "Asset"), class: "btn btn-default" do %>
              <small>Catat Pembelian</small>
            <% end %>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">            
            <%= link_to new_firm_spending_path(firm, type: "Expense"), class: "btn btn-default" do %>
              <small>Catat Pengeluaran</small>
            <% end %>
          </div>
          <div class="btn-group btn-group-justified text-uppercase text-center">            
            <%= link_to new_firm_payable_payment_path(firm), class: "btn btn-default"  do %>
              <small>Catat Pembayaran Hutang</small>
            <% end %>                       
          </div>
        </div>
      </div>

    </div>
    <% end %>

  <% end %>

  </div>
</div>
