<% title("Home") %>
<div class="container">
  <h1>
	 <i class="fa fa-home"></i> Home Page 
  </h1>

  <% if current_user.firms.count == 0 %>  
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div class="box">
        <div class="box-icon">
            <span class="fa fa-4x fa-info"></span>
        </div>
        <div class="info">
            <h4 class="text-center">Selamat Datang! </h4>
            <p>Sebelum menggunakan aplikasi ini, kamu harus 
            memasukkan data mengenai usaha kamu dengan mengklik 
            tombol di bawah ini</p>
            <%= link_to "Buat Akun Usaha", new_firm_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

  <% else %>
  <% @firms.each do |firm| %>
    <%= link_to "Buat Tahun Buku", new_firm_fiscal_year_path(firm)  %>
    <%= button_to 'Cek Penyusutan Aset', refresh_firm_assets_path(firm), method: :post %>
  <div class="row">
    <div class="board">
      <%= render 'nav_tabs' %>
    </div>

    <div class="tab-content">
      <div class="tab-pane active" id="action_dash">  
        <div class="row">
          <%= render partial: 'fund_panel', locals: { firm: firm } %>
          <%= render partial: 'revenue_panel', locals: { firm: firm } %>
          <%= render partial: 'spending_panel', locals: { firm: firm } %>
        </div>
      </div>
      
      <div class="tab-pane" id="report_dash">
        <div class="row">
          <%= render partial: 'report_panel', locals: { firm: firm } %>
        </div>
      </div>

      <div class="tab-pane" id="setting_dash">
      </div>        
    </div>
         
  </div>
  <% end %>

  <% end %>
  </div>
</div>
