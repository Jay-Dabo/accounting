<% title("Welcome") %>

<body id="landing">
  <a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i> Daftar atau Masuk</a>
  <nav id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
      <li class="sidebar-brand">
          <a href="#top">Mandau</a>
      </li>
      <li>
          <%= link_to "Daftar", new_user_registration_path %>
      </li>
      <li>
          <%= link_to "Masuk", new_user_session_path %>
      </li>
    </ul>
  </nav>

	<header id="top" class="header">
    <div class="text-vertical-center">
      <h1>Mandau</h1>
      <h3>Mempermudah Pembukuan Bisnis Kamu</h3>
      <br>
      <a href="#about" class="btn btn-dark btn-lg">Telusuri Lebih lanjut</a>
    </div>
	</header>

	<!-- About -->
	<section id="about" class="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Semudah 1 + 1</h2>
          <p class="lead">
          	Dengan tampilan yang simpel, kamu hanya perlu memasukkan transaksi-transaksi yang telah kamu lakukan seperti pembelian, pengeluaran, dan pendapatan.
          </p>
        </div>
      </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
	</section>

  <section id="plans">
    <%= render '/shared/plans_table' %>
  </section>

	<!-- Services -->
	<section id="services" class="services bg-primary">
    <%= render 'service_section' %>
  </section>

</body>