<% title("Riwayat Transaksi Hutang & Piutang") %>

<h1 class="text-center">Transaksi Hutang dan Piutang</h1>
<hr></hr>

<div class="container">
  <br>
  <div class="panel report panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title">
        Riwayat Pembayaran Hutang
      </h3>
    </div>   
    <ul class="list-group">

      <% @payable_payments.each do |pay| %>
      <li class="list-group-item", style="padding-left: 5px">
        <div class="row toggle" id="dropdown-detail-<%= pay.id %>" data-toggle="detail-<%= pay.id %>">
          <div class="lists col-sm-3 col-xs-12">
            <span class="info_date">
              <i class="fa fa-check-circle-o"></i> <%= pay.date_of_payment %>
              <i class="fa fa-folder"></i> <%= pay.payable_type %>
            </span>
          </div>

          <div class="lists col-sm-3 col-xs-6 text-center">
            <span class="divider"></span>
            <span><%= payment_for(pay) %></span>
          </div>
          <div class="lists col-sm-2 col-xs-6 text-center">
            <span class="divider"></span>
            <span><%= status_of_payable(pay) %></span>
          </div>

          <div class="lists col-sm- col-xs-6 text-center">
            <span class="divider"></span>
            <span class="info_spent"><%= idr_money(pay.amount)%></span>
          </div>
          <div class="lists col-sm-2 col-xs-6 text-center">
            <span class="divider"></span>
            <span class="badge">Detil <i class="fa fa-chevron-down"></i></span>
          </div>
        </div>

        <div id="detail-<%= pay.id %>">
          <hr></hr>
          <div class="container">
              <div class="fluid-row">
                  <div class="col-sm-3 col-xs-12">
                    <%= pay.info %>
                  </div>
                  <div class="col-sm-3 col-xs-12">

                  </div>
                  <div class="col-sm-3 col-xs-12 text-center">
                    <span class="divider"></span>
                    <%= to_item_paid(pay) %>  
                  </div>                  
                  <div class="col-sm-3 col-xs-12 text-center">
                    <span class="divider"></span>
                    <%= edit_payment(pay) %>
                  </div>
              </div>
          </div>
        </div>
      </li>
      <% end %>

     </ul>
  </div>
</div>