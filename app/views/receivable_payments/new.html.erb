<h1>Catat Pembayaran Piutang</h1>

<%= bootstrap_form_for([@firm, @pay_up], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>

	<%= render 'shared/error_messages', object: @pay_up %>

	<div class="well row">
<!-- 	  <div class="col-md-3">
	  <%= f.date_field :date_of_payment, label: 'Tanggal' %>
	  </div> -->
      <div class="col-xs-12 col-md-4" data-toggle="tooltip" 
           title="<%= trans_date_tip %>">
        <%= f.number_field :date, label: "Tanggal", min: 1, max: 31, required: true %>
      </div>
      <div class="col-xs-12 col-md-4" data-toggle="tooltip" 
           title="<%= trans_date_tip %>">
        <%= f.number_field :month, label: "Bulan", min: 1, max: 12, required: true %>
      </div>
      <div class="col-xs-12 col-md-4" data-toggle="tooltip" 
           title="<%= trans_date_tip %>">
        <%= f.number_field :year, label: "Tahun", readonly: true, value: Date.today.year %>
      </div>     	  
	  <div class="col-xs-12 col-sm-12" data-toggle="tooltip" 
           title="Pilih sumber piutang">
	  <%= f.select :revenue_id, revenue_options, prompt: 'Pilih', label: 'Nomor Invoice' %>
	  </div>
	  <div class="col-xs-12 col-sm-12" data-toggle="tooltip" 
           title="<%= trans_total_tip %>">
	  	<%= f.text_field :amount, label: "Nilai Pembayaran", data: {autonumeric: {aSign: 'Rp ', aSep: '.', aDec: ',', mDec: 0}} %>
	  </div>
	  <div class="col-xs-12 col-sm-12" data-toggle="tooltip" 
           title="<%= trans_info_tip %>">
	  	<%= f.text_field :info, label: "Info Tambahan", help: "Kosongkan Bila Tidak Diperlukan" %>
	  </div>

	  <%= f.submit "Simpan", class: "btn btn-primary" %>
	</div>
<% end %>

<%= link_to 'Back', user_root_path %>