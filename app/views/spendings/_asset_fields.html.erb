<div class="nested-fields">
  <div class="form-group">    
    <div class="col-md-4">
      <%= f.select :asset_type, [ 
          ['Persediaan', 'Inventory'], 
          ['Hak Pakai, Hak Sewa, Lease', 'Prepaid'], 
          ['Perlengkapan dan lain-lain', 'OtherCurrentAsset'], 
          ['Kendaraan, Komputer, dan Elektronik lainnya', 'Equipment'],
          ['Mesin, Fasilitas Produksi', 'Plant'], 
          ['Bangunan dan Tanah', 'Property'] 
          ] %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :asset_name, label: "Nama Aset Yang Dibeli" %>
    </div>
    <div class="col-md-2">
      <%= f.number_field :unit, label: "Jumlah" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :measurement, label: "Satuan" %>
    </div>
    <div class="col-md-4">
      <%= f.number_field :value, label: "Harga Pembelian" %>
    </div>
    <div class="col-md-4">
      <%= f.number_field :useful_life, label: "Umur Penggunaan" %>
    </div>
  </div>

  <%= f.hidden_field :firm_id, value: params[:firm_id] %>
</div>