<div class="nested-fields">
  <div class="form-group">    
    <div class="col-md-4">
      <%= f.select :asset_type, [ 
          ['Hak Pakai, Hak Sewa', 'Prepaid'], 
          ['Perlengkapan dan lain-lain', 'OtherCurrentAsset'], 
          ['Kendaraan, Komputer, dan Elektronik lainnya', 'Equipment'],
          ['Kendaraan Berat, Komputer, dan Mesin', 'Machine'],
          ['Mesin, Fasilitas Produksi', 'Plant'], 
          ['Bangunan dan Tanah', 'Property'] 
          ] %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :asset_name, label: "Nama Aset Yang Dibeli" %>
    </div>
    <div class="col-md-2">
      <%= f.number_field :unit, label: "Jumlah", min: 0 %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :measurement, label: "Satuan" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :value, label: "Harga Pembelian", data: {autonumeric: {aSign: 'Rp ', aSep: '.', aDec: ',', mDec: 0}} %>
    </div>
  </div>

  <%= f.hidden_field :firm_id, value: params[:firm_id] %>
</div>