<h1 class="text-center">Daftar Jasa</h1>
<hr></hr>

<div class="container">
  <div class="row">

  <% @works.each do |work| %>
    <div class="col-md-4 col-xs-6">
      <div class="circle-tile ">
        <a href="#"><div class="circle-tile-heading green"><i class="fa fa-smile-o fa-fw fa-3x"></i></div></a>
        <div class="circle-tile-content green">
          <div class="circle-tile-description text-faded"> 
            <%= work.item_name %>
          </div>
          <div class="circle-tile-number text-faded ">
            <%= work.tally %> Transaksi tercatat
          </div>
          <a class="circle-tile-footer" href="<%= firm_revenues_path(work.firm) %>">Cek Riwayat Pendapatan<i class="fa fa-chevron-circle-right"></i></a>
        </div>
      </div>
    </div>
  <% end %>

  </div>
</div>
